<Window x:Name="StockInsight" x:Class="StockInsight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Stock Insight" Height="400" Width="550" ContentRendered="StockInsight_ContentRendered"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF39DBB2">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Label x:Name="lbl_Title" 
               Content="Stock Insight" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1"
               FontWeight="ExtraLight" FontSize="48" Foreground="White" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <fa:ImageAwesome x:Name="fa_Spinner" Icon="CircleOutlineNotch" Foreground="White" Spin="True" Height="48" Width="48"
                HorizontalAlignment="Stretch" Grid.Row="2" VerticalAlignment="Top"/>

    </Grid>
</Window>
